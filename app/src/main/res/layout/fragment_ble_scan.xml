<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <!-- Вращающаяся иконка по центру экрана -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <!-- Верхняя панель — фиксированная -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/icon" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="Подключиться"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:rippleColor="@color/green" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:paddingHorizontal="8dp"
            android:text="Нет подключения"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/rounded" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:padding="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/settings_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Настройки"
                        android:textColor="@color/orange"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Чекбокс принудительное отключение сброса момента -->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/rounded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ездовые характеристики"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/rounded" />

                    <CheckBox
                        android:id="@+id/checkboxReduceTorqueOff"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Принудительное отключение сброса момента" />

                    <!-- Эмуляция сброса момента -->
                    <CheckBox
                        android:id="@+id/checkbox_emulate_torque_reduce"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Принудительный сброс момента" />
                    <!-- Секции для эмуляции моментов по передачам -->
                    <LinearLayout
                        android:id="@+id/layoutEmulateTorque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <!-- 1-2 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1-2 передача 0-100%"
                            android:textColor="@color/orange" />

                        <SeekBar
                            android:id="@+id/seekBar12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10" />

                        <!-- 2-3 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-3 передача 0-100%"
                            android:textColor="@color/orange" />

                        <SeekBar
                            android:id="@+id/seekBar23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10" />

                        <!-- 3-4 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-4 передача 0-100%"
                            android:textColor="@color/orange" />

                        <SeekBar
                            android:id="@+id/seekBar34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10" />
                        <!-- 4-5 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-4 передача 0-100%"
                            android:textColor="@color/orange" />

                        <SeekBar
                            android:id="@+id/seekBar45"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10" />
                        <!-- 5-6 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5-6 передача 0-100%"
                            android:textColor="@color/orange" />

                        <SeekBar
                            android:id="@+id/seekBar56"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="10" />
                    </LinearLayout>


                    <CheckBox
                        android:id="@+id/gearChangeAlgoritm"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Настройка момента переключений -30% - +30%" />

                    <LinearLayout
                        android:id="@+id/layoutBarGearChangeAlgoritm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Момент переключения  "
                                android:textColor="@color/orange" />

                            <TextView
                                android:id="@+id/GearChangeAlgoritmPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/orange" />
                        </LinearLayout>
                        <SeekBar
                            android:id="@+id/seekBarGearChangeAlgoritm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="30"
                            android:min="-30" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/rounded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Конвертация AL4 - TF70"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/rounded" />

                    <LinearLayout
                        android:id="@+id/layoutShiftTorqueAdjust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <!-- 1-2 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1-2 (%)" />

                        <SeekBar
                            android:id="@+id/seekBarAdj12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="12"
                            android:progress="6" /> <!-- 0% будет 6 -->

                        <!-- 2-3 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-3 (%)" />

                        <SeekBar
                            android:id="@+id/seekBarAdj23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="12"
                            android:progress="6" />

                        <!-- 3-4 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-4 (%)" />

                        <SeekBar
                            android:id="@+id/seekBarAdj34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="12"
                            android:progress="6" />

                        <!-- 5-6 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5-6 (%)" />

                        <SeekBar
                            android:id="@+id/seekBarAdj56"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="12"
                            android:progress="6" />
                    </LinearLayout>

                    <!-- Прочие чекбоксы -->
                    <CheckBox
                        android:id="@+id/checkboxClearBits"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Краш фикс (KPB эбу)" />

                    <CheckBox
                        android:id="@+id/checkboxEmulateInit"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Эмуляция инициализации АКПП" />

                    <CheckBox
                        android:id="@+id/checkboxEmulateRPM"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Эмуляция оборотов АКПП" />

                    <CheckBox
                        android:id="@+id/checkboxFixChecksum"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правка контрольной суммы" />

                    <CheckBox
                        android:id="@+id/checkboxFixTorqueRequest"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правка запроса момента" />

                    <CheckBox
                        android:id="@+id/fix_torque_reduction_request"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правка запроса снижения момента" />

                    <CheckBox
                        android:id="@+id/checkboxEmulateClutch"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Эмуляция сцепления" />

                    <CheckBox
                        android:id="@+id/checkboxEmulateESP"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Эмуляция ESP (308)" />

                    <CheckBox
                        android:id="@+id/fixCruise"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix Cruise/LIM" />

                    <CheckBox
                        android:id="@+id/fixInfoEW"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix INFO EW" />

                    <CheckBox
                        android:id="@+id/fixInfoEP"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix INFO EP" />

                    <CheckBox
                        android:id="@+id/fix3c9"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix доп пакет Aisin" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/resetBTN"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:height="50dp"
                        android:background="@drawable/rounded_button"
                        android:text="RESET"
                        android:textAppearance="@color/black"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:rippleColor="@color/green" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/loadingIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/reload"
        android:visibility="gone" />
</FrameLayout>